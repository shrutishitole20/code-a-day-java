public class CharString {
    public static void main(String[] args) {
        // char to String
        char ch = 'A';
        String str = Character.toString(ch);
        System.out.println("Char to String: " + str);

        // String to char
        String s = "Hello";
        char c = s.charAt(0);
        System.out.println("String to char: " + c);
    }
}

/*

Char to String: A
String to char: H

*/
