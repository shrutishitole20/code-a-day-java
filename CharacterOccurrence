public class CharacterOccurrence {
    public static void main(String[] args) {
        String str = "Hello world";
        char ch = 'o';  // character to check
        int count = 0;

        for (int i = 0; i < str.length(); i++) {
            if (str.charAt(i) == ch) {
                count++;
            }
        }

        System.out.println("Occurrence of '" + ch + "' in the string: " + count);
    }
}

//Occurrence of 'o' in the string: 2

